#!/bin/sh
#
# $FreeBSD: ports/net-mgmt/ndpmon/files/ndpmonitor.in,v 1.1 2007/08/29 08:32:26 rafan Exp $
#
# PROVIDE: ndpmonitor
# REQUIRE: DAEMON NETWORKING
#

. %%RC_SUBR%%

name="ndpmonitor"
rcvar=`set_rcvar`

command="%%PREFIX%%/sbin/ndpmon"
required_files=%%PREFIX%%/etc/ndpmon/config_ndpmon.xml

load_rc_config $name

: ${ndpmonitor_enable="NO"}

command_args=">/dev/null &"

run_rc_command "$1"
