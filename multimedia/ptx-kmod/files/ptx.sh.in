#!/bin/sh
# $FreeBSD: ports/multimedia/ptx-kmod/files/ptx.sh.in,v 1.1 2011/07/03 16:47:58 hrs Exp $

# PROVIDE: ptx
# REQUIRE: LOGIN abi
# KEYWORD: nojail

. /etc/rc.subr

name="ptx"
rcvar=`set_rcvar`
start_cmd="ptx_start"
stop_cmd="ptx_stop"

ptx_start()
{
	load_kld %%PREFIX%%/%%KMODDIR%%/ptx.ko
}
ptx_stop()
{
	/sbin/kldunload ptx
}

: ${ptx_enable="YES"}
load_rc_config $name
run_rc_command "$1"
